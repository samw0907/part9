{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./build/",
    "rootDir": "./src",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/data/**/*.ts"],
  "exclude": ["node_modules", "build"]
}